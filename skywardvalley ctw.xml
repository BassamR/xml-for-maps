<?xml version="1.0"?>
<map proto="1.4.1">
<name>Skyward Valley</name>
<version>1.0.0</version>
<objective>Be the first team to capture the enemy's wool!</objective>
<authors>
    <author uuid="4f71d9f9-953d-4b5d-86ae-9d46e5083d2b"/>
    <author uuid="cc67ec01-4b98-4e65-b0ed-49c14c6cb88b"/>
    <author uuid="e7fe6589-3b2c-435f-9c03-8e82d5c7ca84"/>
</authors>
<gamemode>ctw</gamemode>
<rules>
	<rule>Breaking/placing blocks in the spawn island is not allowed.</rule>
	<rule>Breaking the bridge leading to the iron supplies in YOUR spawn island is not allowed.</rule>
	<rule>The wool monument is located on an island next to spawn</rule>
</rules>
<broadcasts>
	<alert after="3s" every="5m">Please read the rules listed in /rules.</alert>
	<tip after="6s" every="10m">The iron is located behind the spawn island.</tip>
</broadcasts>
<teams>
	<team color="dark red" max="5" max-overfill="6">Red</team>
    <team color="blue" max="5" max-overfill="6">Blue</team>
</teams>
<kits>
	<kit name="spawn">
		<item slot="0">iron sword</item>
		<item slot="1">bow</item>
		<item slot="2" enchantment="durability:2">iron pickaxe</item>
        <item slot="3" enchantment="durability:2">iron axe</item>
        <item slot="28" amount="64">arrow</item>
        <item slot="4" amount="64" damage="1">wood</item>
        <item slot="5" amount="64" damage="1">wood</item>
        <item slot="6" amount="32">glass</item>
        <item slot="7" amount="1">golden apple</item>
        <item slot="8" amount="64" name="`Flying Fish">cooked fish</item>
        <potion duration="3" amplifier="3">heal</potion>
        <potion duration="3">damage resistance</potion>
    </kit>
    <kit name="red" parents="spawn">
        <chestplate color="cd0000">leather chestplate</chestplate>
    </kit>
    <kit name="blue" parents="spawn">
        <chestplate color="0066cc">leather chestplate</chestplate>
    </kit> 
</kits>
<spawns>
<spawns>
    <spawn team="red" kit="red">
        <regions yaw="180">
            <cylinder base="4,117,173" radius="3" height="5"/>
        </regions>
    </spawn>
    <spawn team="blue" kit="blue">
    	<regions yaw="0">
    		<cylinder base="7,117,55" radius="3" height="5"/>
    	</regions>
    </spawn>
    <default>
        <regions yaw="90">
            <cylinder base="-165,160,114" radius="4" height="6"/>
        </regions>
    </default>		
</spawns>
<wools>
    <wool team="blue" color="magenta" location="-3,106,161">
	    <monument>
		    <block>28,108,43</block>
	    </monument>
	</wool>
	<wool team="red" color="lime" location="9,107,67">
	    <monument>
		    <block>-19,108,184</block>
	    </monument>
	</wool>
</wools>
<regions></regions>
<filters></filters>
<itemremove></itemremove>
<kill-rewards>
	<item amount="1">golden apple</item>
</kill-rewards>
</map>	    	
